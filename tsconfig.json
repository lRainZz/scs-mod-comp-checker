{
  "compilerOptions": {
        // node 16 - because of pkg, but most of the ES12 features are alreay supported
        "target": "ES2021",
        // the array functions of ES13 are also available
        "lib": ["ES2021", "ES2022.Array"],
        // beacuse of pkg
        "module": "commonjs",
        "outDir": "dist",
        "types": ["node"],
        "moduleResolution": "node",

        "moduleDetection": "force",

        "sourceMap": true,
        "inlineSources": true,

        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitOverride": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "noUncheckedIndexedAccess": true,
        "forceConsistentCasingInFileNames": true,

        "esModuleInterop": true,
        "resolveJsonModule": true,

        "skipLibCheck": true,
    },
    "include": [
        "index.ts",
        "types/**/*",
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
